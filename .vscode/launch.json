{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            // Debug the currently selected Python file
            "name": "debugpy: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
        },
        {
            // Debug the roll-table package with the current file as the target
            "name": "debugpy: roll-table ${file}",
            "type": "debugpy",
            "request": "launch",
            "console": "integratedTerminal",
            "env": { "ROLL_TABLE_LOG_LEVEL": "debug" },
            "program": "${workspaceFolder}/src/roll_table/cli.py",
            "args": [
                "${file}"
            ]
        }
    ]
}